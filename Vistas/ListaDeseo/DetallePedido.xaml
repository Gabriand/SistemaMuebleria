<Page x:Class="MuebleriaPIS.Vistas.ListaDeseo.DetallePedido"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MuebleriaPIS.Vistas.ListaDeseo"
      xmlns:vm="clr-namespace:MuebleriaPIS.VistaModelo"
      xmlns:compartido="clr-namespace:MuebleriaPIS.Vistas.Compartido"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Background="{StaticResource BackgroundBrushSecond}">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="60"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Barra de navegación -->
        <compartido:BarraNavegacion Grid.Row="0" x:Name="barraNavegacion"/>

        <!-- Lista de deseos -->
        <ScrollViewer Grid.Row="1">
            <ItemsControl ItemsSource="{Binding ListaDeseos}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Horizontal" Margin="10">
                            <Image Source="{Binding Imagen}" Height="100" Width="100"/>
                            <TextBlock Text="{Binding Nombre}" FontSize="20" Margin="10,0"/>
                            <TextBlock Text="{Binding Precio, StringFormat='C'}" FontSize="18" Margin="10,0"/>
                        </StackPanel>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>
    </Grid>
</Page>
