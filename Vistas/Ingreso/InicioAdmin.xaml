<Page x:Class="MuebleriaPIS.Vistas.InicioAdmin"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MuebleriaPIS.Vistas"
      xmlns:compartido="clr-namespace:MuebleriaPIS.Vistas.Compartido"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Background="{StaticResource BackgroundBrushSecond}">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="120"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <compartido:BarraAdministrador Grid.Column="0" x:Name="barraAdministrador"/>

        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="100"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <TextBlock Text="Administrador"
                      Grid.Row="0"
                      FontFamily="Gadugi"
                      FontWeight="SemiBold"
                      FontSize="30"
                      Margin="25,0,0,0"
                      HorizontalAlignment="Left"
                      VerticalAlignment="Center"/>
        </Grid>
    </Grid>
</Page>
