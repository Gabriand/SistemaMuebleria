<Page x:Class="MuebleriaPIS.Vistas.Ingreso.RecuperarContrasena"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MuebleriaPIS.Vistas.Ingreso"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Background="{StaticResource BackgroundBrushPrimary}">

    <Grid>
        <Border Grid.Row="1">
            <Border.Effect>
                <DropShadowEffect Color="Gray" BlurRadius="6" ShadowDepth="0"/>
            </Border.Effect>
            <StackPanel Margin="160,0,160,0" 
                        VerticalAlignment="Center" 
                        Background="{StaticResource BackgroundBrushSecond}" 
                        MaxWidth="800"
                        MinWidth="450" Height="217">
                <!--Titulo-->
                <TextBlock Text="Ajustes de cuenta"
                           FontSize="30" 
                           FontFamily="Gadugi" 
                           FontWeight="SemiBold" 
                           HorizontalAlignment="Center"
                           Margin="10, 15, 10, 15"/>
                <!--Correo de recuperacion-->
                <TextBlock Text="Para recuperar el usuario y (o) la contraseña o eliminar sus cuenta contactese al siguiente correo: admin@muebleria.com"
                           TextWrapping="Wrap"
                           Margin="35,0,0,20"
                           FontSize="16" 
                           FontFamily="Gadugi"
                           Foreground="Gray"
                           HorizontalAlignment="Center" Width="400" Height="63"/>
                <!--Boton-->
                <Button x:Name="Regresar"
                            Content="Regresar" 
                            FontSize="16" 
                            Height="39"
                            FontFamily="Gadugi" 
                            HorizontalAlignment="Stretch" 
                            FontWeight="SemiBold"
                            Margin="100,0,100,25"
                            Style="{StaticResource InverseButtonStyle}"
                            Grid.Column="1" 
                            Click="btnRegresar_Click"/>
            </StackPanel>
        </Border>
    </Grid>
</Page>
