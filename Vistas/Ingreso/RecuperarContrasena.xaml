<Page x:Class="MuebleriaPIS.Vistas.Ingreso.RecuperarContrasena"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MuebleriaPIS.Vistas.Ingreso"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Background="{StaticResource BackgroundBrushPrimary}">

    <Grid>
        <Border Grid.Row="1">
            <Border.Effect>
                <DropShadowEffect Color="Gray" BlurRadius="6" ShadowDepth="0"/>
            </Border.Effect>
            <StackPanel Margin="160, 0, 160, 0" 
                        VerticalAlignment="Center" 
                        Background="{StaticResource BackgroundBrushSecond}" 
                        MaxWidth="800"
                        MinWidth="450">
                <!--Titulo-->
                <TextBlock Text="Recuperar Usuario" 
                           FontSize="30" 
                           FontFamily="Gadugi" 
                           FontWeight="SemiBold" 
                           HorizontalAlignment="Center" 
                           Margin="0,15,0,15"/>
                <!--Correo de recuperacion-->
                <TextBlock Text="Correo:" Margin="35,0,0,5" FontSize="16" FontFamily="Gadugi" HorizontalAlignment="Left"/>
                <TextBox x:Name="txtCorreo" 
                         Height="36"
                         FontSize="16" 
                         FontFamily="Gadugi" 
                         HorizontalAlignment="Stretch"
                         BorderThickness="2"
                         Background="{StaticResource BackgroundBrushSecond}"
                         Style="{StaticResource ModernTextBox}"
                         Margin="33,0,33,20"/>
                <!--Botones-->
                <Grid Margin="0,0,0,30">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Button x:Name="btnRecuperar" 
                            Content="Recuperar" 
                            FontSize="16" 
                            Height="39"
                            FontFamily="Gadugi" 
                            HorizontalAlignment="Stretch"
                            FontWeight="SemiBold"
                            Margin="35,0,10,0"
                            Style="{StaticResource BaseButtonStyle}"
                            Grid.Column="0"
                            Click="btnRecuperar_Click"/>

                    <Button x:Name="btnCancelar"
                            Content="Cancelar" 
                            FontSize="16" 
                            Height="39"
                            FontFamily="Gadugi" 
                            HorizontalAlignment="Stretch" 
                            FontWeight="SemiBold"
                            Margin="10,0,35,0"
                            Style="{StaticResource InverseButtonStyle}"
                            Grid.Column="1" 
                            Click="btnCancelar_Click"/>
                </Grid>
            </StackPanel>
        </Border>
    </Grid>
</Page>
